void  gestaoDeUtilizador () {
   unsigned int option, mdata;
   char *mnome, *memail;
     while(1){
  printf ("1)Mudar de Nome\n");
  printf ("2)Mudar Data De Nascimento\n");
  printf ("3)Mudar Email\n");
  printf ("4)Sair\n");
  printf("Escolha uma opção: ");
  scanf("%d", &option);

  if (option == 1){
   scanf("%s", &*mnome);
  }
  else  if(option == 2){
    scanf("%d", &mdata);
  }
  else if(option == 3){
    scanf("%s", &*memail);
  }
  else if(option == 4){
      exit(0);
  }

  else {
    printf("Opção inválida.Por favor tente de novo.");
    system("clear");
    menuPrincipal();
    break;
    sleep(1);


    }
  }
}

void criarConta () {
    unsigned int option, data;
    char *nome, *email;
    while(1){
  printf("**Criar Conta**\n");
  printf("1)Nome:\n ");
  printf("2)Data de Nascimento:\n ");
  printf("3)Email:\n");
  printf("Escolha uma opção: ");
  scanf("%d", &option);

  if (option == 1){
    scanf("%s", &*nome);
  }
  else if(option == 2){
    scanf("%d", &data);
   }
   else if (option == 3){
     scanf("%s", &*email);
   }

  else {
      printf("Opção inválida.Por favor tente de novo.");
      system("clear");
      menuPrincipal();
      break;
      sleep(1);
     }
   }
 }

int main (void){
  menuPrincipal ();
