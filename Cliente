#include <stdio.h>
#include <stdlib.h>
#include <string.h>

 void menuPrincipal() {
   unsigned int option;
    while(1){
      printf("\n**Menú de Registo**\n");
      printf("1)Login\n");
      printf("2)Criar conta\n");
      printf("3)Sair\n");
      printf("Escolha uma opção: ");
      scanf("%d", &option);
    if(option == 1){
	     login();
      }
    else if(option == 2){
	      criarConta();
     }
    else if(option == 3){
	      exit(0);
     }
    else {
      printf("Opção inválida.Por favor tente de novo.");
      system("clear");
      menuPrincipal();
    }


 }

 }

