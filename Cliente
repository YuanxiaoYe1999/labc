 scanf("%d", &option);

  if (option == 1){
   verMensagemDeUmTopico();
   }
  else  if (option == 2){
    exit(0);
  }

 else {
   printf("Opção inválida.Por favor tente de novo.");
   system("clear");
   menuPrincipal();
   break;

   }
  }
 }

