#include <stdio.h>
#include <stdlib.h>
#include <string.h>
//#include <conio.h>


void menuPrincipal() {
   unsigned int option;
    while(1){
      printf("\n**Menú Principal**\n");
      printf("1)Login/Autenticar\n");
      printf("2)Criar conta\n");
      printf("3)Menu\n");
      printf("4)Sair\n");
      printf("Escolha uma opção: ");
      scanf("%d", &option);
      if(option == 1){
	     void login();
      }
    else if(option == 2){
	      void criarConta();
     }
     else if(option == 3){
       void menu();
     }
    else if(option == 4){
	      exit(0);
     }
    else {
      printf("Opção inválida.Por favor tente de novo.");
      system("clear");
      menuPrincipal();
      break;
      sleep(1);
    }

  }

 }

void login () {
   unsigned int option, nomemail, pass;
    while(1){
  printf("\n**Login/Autenticar**\n");
  printf("1)Nome/Email:\n ");
  printf("2)Password:\n ");
  printf("3)Sair:\n ");
  printf("Escolha uma opção: ");
  scanf("%d", &option);
  if(option == 1){
    scanf("%d", &nomemail);
  }
  else if(option == 2){
    scanf("%d", &pass);
  }
  else if(option == 3){
    exit(0);
  }
  else {
     printf("Opção inválida.Por favor tente de novo.");
     system("clear");
     menuPrincipal();
     break;
  }

  }
}

void menu() {
   unsigned int option;
     while(1){
  printf ("\n**Menu**\n");
  printf ("1)Ver Feed\n");
  printf ("2)Ver Tópicos\n");
  printf ("3)Procurar tópicos mais ativos\n");
  printf ("4)Subescrever tópicos\n");
  printf ("5)Publicar num tópico\n");
  printf ("6)Gerir Lista de Subscrições\n");
  printf ("7)Ver Estatísticas\n");
  printf ("8)Gestão da conta de utilizador\n");
  printf ("9)Sair\n");
  printf("Escolha uma opção: ");
  scanf("%d", &option);

  if (option == 1){
    void feed();
  }
  else  if (option == 2){
    void verTopico();
  }
  else if (option == 3){
    void procurarTopicoMaisAtivos();
  }
  else if (option == 4){
    void subescreverTopicos();
  }
  else if (option == 5){
    void publicarNumTopico();
  }
  else if (option == 6){
    void gerirSubescricoes();
  }
  else if (option == 7){
    void verEstatisticas();
  }
  else if (option == 8){
    void gestaoDeUtilizador();
  }

  else if(option == 9){
      exit(0);
  }

  else {
   printf("Opção inválida.Por favor tente de novo.");
   system("clear");
   menuPrincipal();
   break;
   sleep(1);
      }

   }
}

void feed () {
  unsigned int option;
  char *topicos;
  int like;
  while(1){
 printf("1)Consultar Topico\n");
 printf("2)Por like nos Topicos\n");
 printf("3)Sair\n");
 printf("Escolha uma opção: ");
 scanf("%d", &option);

  if (option == 1){
    scanf("%s", &*topicos);
 }
  else  if (option == 2){
    scanf("%d", &like);
 }

  else if(option == 3){
    exit(0);
 }
  else {
  printf("Opção inválida.Por favor tente de novo.");
  system("clear");
  menuPrincipal();
  break;
  sleep(1);
 }

 }


}

